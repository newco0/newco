{% extends '/front/base.html.twig' %}

{% block title %}Liste des messages
{% endblock %}

{% block content %}
	<div class="col-12 col-sm-10 mx-auto">
		<div class="my-2 d-flex">
			<i class="icofont-arrow-left icofont-2x prevlistmessage d-none color68c2e8"></i>
			<h1 class="titlemessage">Mes messages</h1>
		</div>
		<div class="d-flex row content-conversation content-mobile h-100 ">
			<div class="listconversation col-12 col-sm-4 mx-auto p-2 heightconv">
				<ul class="p-0">
					{% if discussion is defined %}
						{% for userlist in discussion %}
							{% if not userlist.discussionHistories|last.message is defined and userlist.discussionHistories.owner.id != iduserrequest %}
								{% else %}
									<li iddisc="{{userlist.id}}" idowner="{{iduserrequest}}" class="list-unstyled color0d1d3d rounded p-2 my-1 renderdiscussion backWhite">
										<h6 class="font-weight-bold">
											{% if userlist.idexp.id == iduserrequest %}
												{{ userlist.dest.firstname }}
											{% else %}
												{{ userlist.idexp.firstname }}
											{% endif %}
										</h6>
										{% if userlist.discussionHistories|last.message is defined %}
											{% if userlist.discussionHistories|last.user.id != iduserrequest and not userlist.discussionHistories|last.isSeen %}
												<p class="font-weight-bold lastmessage">{{ userlist.discussionHistories|last.message|slice(0, 10) }}...</p>
											{% else %}
												<p class="lastmessage">{{ userlist.discussionHistories|last.message|slice(0, 10) }}...</p>
											{% endif %}
										{% else %}
											<pre> </pre>
										{% endif %}
									</li>

							{% endif %}
						{% endfor %}
					{% endif %}
				</ul>
			</div>
			<div class="conversation col-12 col-sm-8 d-none d-sm-block p-0"></div>
		</div>
	</div>
{% endblock %}
