<div class="listmessage border d-flex align-items-center flex-column w-100 h-100">
		{% for listmessage in discussion %}
			{% if listmessage.user.id == iduserrequest %}
				<div class="d-flex justify-content-start w100 p-3">
					<img src="/assets/img/profil.jpg" class="d-sm-none d-md-block imgconv d-sm rounded-circle">
					<p class="mx-2 p-2 rounded bgcolor68c2e8 text-white">{{listmessage.message}}
						<span class="datemessage my-1 d-block text-right">Envoyé le
							{{listmessage.DateRegister|date('d/m/Y H:i:s')}}</span>
					</p>
				</div>
			{% else %}
				<div class="d-flex justify-content-end w100 p-3">
					<p class="mx-2 p-2 rounded bg-secondary text-white">{{listmessage.message}}
						<span class="datemessage my-1 d-block text-right">Envoyé le
							{{listmessage.DateRegister|date('d/m/Y H:i:s')}}</span>
					</p>
					<img src="/assets/img/profil.jpg" class="d-sm-none d-md-block imgconv rounded-circle">
				</div>
			{% endif %}
		{% endfor %}
	{{ form_start(formmessage, {'attr': {'class': 'heightform w-100 border bg-white mx-auto d-flex flex-row justify-content-around justify-sm-content-center align-items-center sendmessagemobile'}}) }}
	{{ form_widget(formmessage.message, {'attr': {'class': 'textmessage rounded w-50'}}) }}
	{{ form_widget(formmessage.save, { 'label': 'Envoyer' }) }}
	{{ form_end(formmessage) }}
</div>
